<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <h2>Add new task!</h2>
      <form method="post" action="/task" class="form-horizontal">
        <div class="form-group">
          <input type="text" name="content" class="form-control" placeholder="Add task content...">
        </div>
        <button class="btn btn-info">Add Task</button>
        <a href="/" class="btn btn-danger">Cancel</a>
      </form>
    </div>
  </div>
</div>
