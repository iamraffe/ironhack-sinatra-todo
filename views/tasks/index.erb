  <div class="container">
    <h1>Welcome to the TodoList hommie!</h1>
    <div class="row">
      <table class="table table-striped table-hover">
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td>
                <%= task.id %>:
              </td>
              <td>
                 <%= task.content %>
              </td>
              <td>
                (Created: <%= task.created_at.strftime('%A %m/%d/%y') %>)
              </td>
              <td>
                <button class="btn btn-success" data-id="<%= task.id %>"><span class="fa fa-check"></span></button>
                <button class="btn btn-danger" data-id="<%= task.id %>"><span class="fa fa-times"></span></button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
