  <div class="container">
    <div class="row">
      <div class="jumbotron">
        <h1 class="text-center">Welcome to the TodoList hommie!</h1>
      </div>
    </div>
    <div class="row">
     <table class="table table-striped table-hover">
      <tbody>
        <thead>
          <tr>
            <th>#</th>
            <th>Task Content</th>
            <th>Created</th>
            <th>Options</th>
          </tr>
        </thead>
        <% @tasks.each do |task| %>
          <tr class="<%= task.completed ? 'success' : '' %>">
            <td>
              <%= task.id %>:
            </td>
            <td>
               <%= task.content %>
            </td>
            <td>
              <%= task.created_at.strftime('%A %m/%d/%y') %>
            </td>
            <td>
              <button class="btn btn-success complete-item" type="button" data-id="<%= task.id %>"data-toggle="tooltip" data-placement="top" title="Completed"><span class="fa fa-check"></span></button>
              <button class="btn btn-danger delete-item" type="button" data-id="<%= task.id %>" data-toggle="tooltip" data-placement="top" title="Delete"><span class="fa fa-times"></span></button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
